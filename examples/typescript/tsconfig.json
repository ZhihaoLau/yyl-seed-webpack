{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es3",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "..\\..\\node_modules\\*",
        "..\\..\\config\\typescript\\node_modules\\*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}